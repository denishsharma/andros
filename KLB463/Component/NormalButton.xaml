<UserControl x:Name="NBControl" x:Class="NormalButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KLB463"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="40" AllowDrop="True" HorizontalAlignment="Left" VerticalAlignment="Top">

    
    
    
    <Grid Margin="0.5,0">
        <Rectangle x:Name="SBback" HorizontalAlignment="Left" Height="40" StrokeThickness="0" VerticalAlignment="Top" Width="40" Fill="#FF6E6E6E" Opacity="0"/>
        <Rectangle x:Name="SBclicked" HorizontalAlignment="Left" Height="40" StrokeThickness="0" VerticalAlignment="Top" Width="40" Fill="#FF555555" Opacity="0"/>
        <Image x:Name="SBicon" HorizontalAlignment="Center" Height="18" VerticalAlignment="Center" Width="18" Source="/KLB463;component/Images/Folder.png"/>
        <Rectangle x:Name="SBstatus" Fill="#FFB6D7FF" Height="2" Margin="0" StrokeThickness="0" VerticalAlignment="Bottom" Width="30" Opacity="0" RadiusX="1" RadiusY="1 "/>
        <Rectangle x:Name="SBfront" HorizontalAlignment="Left" Height="40" StrokeThickness="0" VerticalAlignment="Top" Width="40" Fill="#01000000"/>
        

    </Grid>
</UserControl>
