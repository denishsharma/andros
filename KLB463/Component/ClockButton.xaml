<UserControl x:Name="CBcontrol" x:Class="ClockButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KLB463"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="100">
    <Grid>
        <Rectangle x:Name="SBback" HorizontalAlignment="Left" Height="40" StrokeThickness="0" VerticalAlignment="Top" Width="100" Fill="#FF6E6E6E" Opacity="0"/>
        <Rectangle x:Name="SBclicked" HorizontalAlignment="Left" Height="40" StrokeThickness="0" VerticalAlignment="Top" Width="100" Fill="#FF555555" Opacity="0"/>
        <Label x:Name="lblTime" Content="00:00 AM" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" Padding="5,3,5,0" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="20"/>
        <Label x:Name="lblDate" Content="00-00-0000" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" Padding="5,0,5,3" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,21,0,0"/>
        <Rectangle x:Name="SBfront" HorizontalAlignment="Left" Height="40" StrokeThickness="0" VerticalAlignment="Top" Width="100" Fill="#01000000"/>
    </Grid>
</UserControl>
