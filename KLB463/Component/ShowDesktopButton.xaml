<UserControl x:Name="SDBcontrol" x:Class="ShowDesktopButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KLB463"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="40" Width="5">
    <Grid>
        <Rectangle x:Name="SBback" HorizontalAlignment="Left" Height="40" StrokeThickness="0" VerticalAlignment="Top" Width="5" Fill="#FF6E6E6E" Opacity="0"/>
        <Rectangle x:Name="SBclicked" HorizontalAlignment="Left" Height="40" StrokeThickness="0" VerticalAlignment="Top" Width="5" Fill="#FF555555" Opacity="0"/>
        <Rectangle x:Name="SBLeftBorder" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="0.6" Fill="White" StrokeThickness="0" Opacity="0.2"/>
        <Rectangle x:Name="SBfront" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="5" Fill="#01000000"/>
    </Grid>
</UserControl>
