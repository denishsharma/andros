<UserControl x:Name="app_cont" x:Class="app_container"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestApp1"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="#FFEACE1A">
    <Grid>
        <TextBox x:Name="txt1" Text="Text" Margin="25,33,25,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Height="28"/>
        <RichTextBox Margin="25,130,25,25" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="btn1" Content="Set Window Text" HorizontalAlignment="Left" Margin="25,66,0,0" VerticalAlignment="Top" Width="133" Height="28"/>

    </Grid>
</UserControl>
